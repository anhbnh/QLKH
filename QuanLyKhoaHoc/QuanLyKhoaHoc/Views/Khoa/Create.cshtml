@model QuanLyKhoaHoc.Models.dmKhoa



<div class="form-horizontal">
    <h4>CẬP NHẬT THÔNG TIN KHOA</h4>
    <hr />

    <div class="row">
        <div class="form-group">
            <label class="control-label col-lg-3 col-md-4">Mã khoa</label>
            <div class="col-lg-9 col-md-8">
                @Html.EditorFor(model => model.Ma_khoa, new { htmlAttributes = new { @class = "form-control", @id = "txtMaKhoa" } })
                @Html.ValidationMessageFor(model => model.Ma_khoa, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <label class="control-label col-lg-3 col-md-4">Tên khoa</label>
            <div class="col-lg-9 col-md-8">
                @Html.EditorFor(model => model.Ten_khoa, new { htmlAttributes = new { @class = "form-control", @id = "txtTenKhoa" } })
                @Html.ValidationMessageFor(model => model.Ten_khoa, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <div class="row">
        <div class="form-group">
            <label class="control-label col-lg-3 col-md-4">Tên tiếng anh</label>
            <div class="col-lg-9 col-md-8">
                @Html.EditorFor(model => model.Ten_khoa_en, new { htmlAttributes = new { @class = "form-control", @id = "txtTenKhoaEn" } })
                @Html.ValidationMessageFor(model => model.Ten_khoa_en, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>
