<div class="table-responsive">
    <table class="table table-bordered table-hover table-header">
        <tr>
            <th width="200">
                Mã chuyên ngành
            </th>
            <th>
                Tên chuyên ngành
            </th>
            <th>
                Tên ngành
            </th>
            <th>
                Tên tiếng anh
            </th>
            <th colspan="3" class="text-center" width="150">Thao tác</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td width="200">
                    @item.Ma_chuyen_nganh
                </td>
                <td>
                    @item.Chuyen_nganh
                </td>
                <td>
                    @item.Ten_nganh
                </td>
                <td>
                    @item.Chuyen_nganh_en
                </td>

                <td width="150">

                    <a href="javascript:void(0)" style="color:blue; margin-right:20px;" data-toggle="tooltip" title='Sửa' onclick="ShowModalDetail('@item.ID_chuyen_nganh','@item.Ma_chuyen_nganh','@item.ID_nganh','@item.Chuyen_nganh','@item.Chuyen_nganh_en')"> <span class="s-icon"><i class="ti-write"></i></span></a>  @*></a>*@

                    <a href="javascript:void(0)" style="color:red" data-toggle="tooltip" title='Xóa' onclick="ShowModalDelete('@item.ID_chuyen_nganh')"><span class="s-icon"><i class="ti-close"></i></span></a>
                </td>
            </tr>
        }

    </table>

</div>