@model QuanLyKhoaHoc.BundleConfig

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Header{
    Chuyên môn
}
<div class="row">
    <button class="btn btn-primary" id="btnCreate">Thêm mới</button>
</div>

<div class="row" id="divData">
    @{
        Html.RenderAction("LoadData");
    }
</div>

<div>
    @{
        Html.RenderAction("RenderPaginations");
    }
</div>



@section Scripts{

    <script>
        // phân trang
        var pageIndex = 1;
        var max = 1;

        $('.pagination li').on('click', function () {
            debugger;
            var $this = $(this);
            var str = $this.text().trim();
            var str1 = '<<';
            var str2 = '>>';
            if (str == str1) {
                if (pageIndex > 1) {
                    pageIndex = parseInt(pageIndex) - 1;
                    var url = '/ChuyenMon/LoadData?page=' + pageIndex;
                    $('#divData').load(url);

                    $('.pagination li').removeClass('active');
                    if (!$(".pagination li:nth-child(" + (pageIndex + 1) + ")").hasClass('active')) {
                        $(".pagination li:nth-child(" + (pageIndex + 1) + ")").addClass('active');
                    }
                }
                else pageIndex = 1;
            }
            else if (str == str2) {
                if (pageIndex < max) {
                    pageIndex = parseInt(pageIndex) + 1;
                    var url = '/ChuyenMon/LoadData?page=' + pageIndex;
                    $('#divData').load(url);


                    $('.pagination li').removeClass('active');
                    if (!$(".pagination li:nth-child(" + (pageIndex + 1) + ")").hasClass('active')) {
                        $(".pagination li:nth-child(" + (pageIndex + 1) + ")").addClass('active');
                    }
                }
                else
                    pageIndex = max;
            }
            else {
                pageIndex = $this.text();
                var url = '/ChuyenMon/LoadData?page=' + pageIndex;
                $('#divData').load(url);

                $('.pagination li').removeClass('active');
                if (!$this.hasClass('active')) {
                    $this.addClass('active');
                }
            }



        });

        function maxPage(mp) {
            debugger;
            max = mp;
        }

        // hết phân trang

    </script>

}