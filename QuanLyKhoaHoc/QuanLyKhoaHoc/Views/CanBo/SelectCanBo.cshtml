@model IEnumerable<QuanLyKhoaHoc.Models.kh_HoSoCanBo>

<div style="width:auto; overflow-x:auto;height: 450px;" id="divChonCanBo">

    <table class="table table-bordered table-hover" style="width:1900px;">
        <thead>
            <tr>
                <td style="width:50px;">Chọn</td>
                <td style="width:100px;">
                    Mã cán bộ
                </td>
                <td style="width:200px;">
                    Họ và tên
                </td>
                <td style="width:120px;">
                    Ngày sinh
                </td>
                <td style="width:70px;">
                    Giới tính
                </td>
                <td style="width:200px;">
                    Học hàm
                </td>
                <td style="width:200px;">
                    Học vị
                </td>
                <td style="width:250px;">
                    Nơi sinh
                </td>
                <td style="width:200px;">
                    Chức vụ
                </td>
                <td style="width:250px;">
                    Đơn vị
                </td>
                <td style="width:250px;">
                    Chức danh
                </td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50">
                        <a href="javascript:void(0)" style="color:green" data-toggle="tooltip" title='Chọn' onclick="find('@item.ID_cb','@item.Ma_cb','@item.Ho_ten','@item.Ngay_sinh.Value.ToString("dd/MM/yyyy")','@item.Di_dong','@item.Don_vi','@item.Hoc_ham','@item.Email')"><i class="glyphicon glyphicon-ok"></i></a>
                    </td>
                    <td style="width:100px;">
                        @item.Ma_cb
                    </td>
                    <td style="width:200px;">
                        @item.Ho_ten
                    </td>
                    <td style="width:120px;">
                        @item.Ngay_sinh.Value.ToString("dd/MM/yyyy")
                    </td>
                    <td style="width:70px;">
                        @item.Gioi_tinh
                    </td>
                    <td style="width:200px;">
                        @item.Hoc_ham
                    </td>
                    <td style="width:200px;">
                        @item.Hoc_vi
                    </td>
                    <td style="width:250px;">
                        @item.Noi_sinh
                    </td>
                    <td style="width:200px;">
                        @item.Chuc_vu
                    </td>
                    <td style="width:250px;">
                        @item.Don_vi
                    </td>
                    <td style="width:250px;">
                        @item.Chuc_danh
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>