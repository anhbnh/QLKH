@model IEnumerable<QuanLyKhoaHoc.Models.DeTai_CanBo>

<table class="table">
    <tr style="background-color:white;">
        <th width="150">
           Mã cán bộ
        </th>
        <th width="150">
          Họ tên
        </th>
        <th width="120">
            Từ ngày
        </th>
        <th width="120">
           Đến ngày
        </th>
        <th>
           Nhiệm vụ
        </th>
        <th>
         Mô tả
        </th>
        <th width="100">Hành động</th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        
        <td width="150">
            @Html.DisplayFor(modelItem => item.Ma_cb)
        </td>
        <td width="150">
            @Html.DisplayFor(modelItem => item.Ten_Can_Bo)
        </td>
        <td width="120">
            @item.Tu_Ngay.Value.ToString("dd/MM/yyyy")
        </td>
        <td width="120">
            @item.Den_Ngay.Value.ToString("dd/MM/yyyy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nhiem_Vu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mo_Ta)
        </td>
        <td width="100">
            <div class="dropdown">
                <button class="btn-link dropdown-toggle" type="button" data-toggle="dropdown">
                    Hành động
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="javascript:void(0)" style="color:blue; margin-right:20px;" data-toggle="tooltip" title='Sửa' @*onclick="ShowChiTietHoiDong('@item.ID_hd_chi_tiet','@item.SDT','@item.ID_cb','@item.Ma_cb','@item.Ho_ten','@item.Ten_Don_Vi','@item.Chuc_vu_dv','@item.ID_chuc_vu_hd','@item.Ghi_chu')"*@> <i class="glyphicon glyphicon-pencil"></i>Sửa</a>  @*></a>*@</li>
                    <li><a href="javascript:void(0)" style="color:red" data-toggle="tooltip" title='Xóa' @*onclick="alter('Xóa : '+ @item.ID_hd_chi_tiet)"*@><i class="glyphicon glyphicon-remove"></i>Xóa</a></li>
                </ul>
            </div>
        </td>
    </tr>
}

</table>
